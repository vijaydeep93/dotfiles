# my settings
export SUDO_EDITOR=nvim
export UPDATE_AUR=1

# config files
export BASHRC="$HOME/Src/dotfiles/bash/bashrc.sh"
export VIMCONFIG="$HOME/Src/dotfiles/nvim/init.vim"
export GITCONFIG="$HOME/Src/dotfiles/git/gitconfig"
export FISHCONFIG="$HOME/Src/dotfiles/fish/fish_profile"

# use docker buildkit to build the docker images
export DOCKER_BUILDKIT=1

# aliases
alias vim 'nvim'
alias sharethis 'python -m http.server'
alias watch 'watch '

alias ebash 'nvim $BASHRC'
alias evim 'nvim $VIMCONFIG'
alias egit 'nvim $GITCONFIG'
alias efish 'nvim $FISHCONFIG'

alias dotfiles 'cd ~/Src/dotfiles/'
alias bots 'cd ~/Src/botsjungle/'

alias nettest 'ping -c 3 google.com'
